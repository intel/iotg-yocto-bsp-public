+
+#ifndef IPU_PLATFORM_PSYS_H
+#define IPU_PLATFORM_PSYS_H
+
+#include <uapi/linux/ipu-psys.h>
+
+struct ipu_psys_fh;
+struct ipu_psys_kcmd;
+
